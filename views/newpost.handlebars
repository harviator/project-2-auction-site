<div>
    <h2>Post New Bid</h2>
    <div class="fTable w-max mx-auto">
        <h2 class="tHead">Select Item</h2>
        <form class="add-post-form">
        <div class="grid grid-rows-1">

            {{!-- choose item --}}
        <div class="border border-black mx-auto mt-2">
            <label>ITEM</label>
            <select id="add-item">
                {{#each items as |item|}}
                <option value="{{item.id}}">{{item.name}}</option>
                {{/each}}
            </select>
        </div>

        {{!-- quality --}}
        <div class="my-2">
            <label>QUALITY</label>
            <input class="border border-black" type="number" id="add-quality">
        </div>

        {{!-- starting bid --}}
        <div class="my-2">
            <label>STARTING BID</label>
            <input class="border border-black " type="number" id="add-starting-bid">
        </div>
       
        {{!-- submit button --}}
        <div class="mx-auto mb-2">
            <button type="submit" value="Submit">Submit</button>
        </div>
        </div>
        
    </form>
    </div>
</div>

<script src="/js/newpost.js"></script>